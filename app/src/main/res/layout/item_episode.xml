<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="@dimen/_8sdp"
    android:layout_marginVertical="@dimen/_4sdp"
    android:orientation="horizontal"
    android:paddingStart="0dp"
    android:paddingEnd="@dimen/_8sdp"
    android:paddingVertical="@dimen/_8sdp"
    android:background="@android:color/transparent">

        <!-- Episode Thumbnail -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_68sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/item_episode_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/black"
                tools:src="@tools:sample/backgrounds/scenic" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Episode Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical">

            <!-- Episode Name and Duration Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_episode_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="The Beginning of the End" />

                <TextView
                    android:id="@+id/item_episode_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/_9ssp"
                    tools:text="45m" />

            </LinearLayout>

            <!-- Episode Number -->
            <TextView
                android:id="@+id/item_episode_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/_9ssp"
                tools:text="Episode 1" />

            <!-- Episode Description -->
            <TextView
                android:id="@+id/item_episode_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:fontFamily="@font/montserrat_light"
                android:textColor="@color/white"
                android:textSize="@dimen/_8ssp"
                android:maxLines="2"
                android:ellipsize="end"
                android:alpha="0.8"
                tools:text="A high school chemistry teacher diagnosed with inoperable lung cancer turns to manufacturing and selling methamphetamine." />

        </LinearLayout>

</LinearLayout>
